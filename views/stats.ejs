<%- include('partials/head', { title: 'Statistics', showBack: true }) %>
<div class="grid gap-4">
  <h2 class="text-xl font-bold">Statistics</h2>
  <div class="grid grid-cols-2 sm:grid-cols-3 gap-3" id="stat-items"></div>
  <div class="bg-white rounded-xl shadow p-3">
    <div class="flex items-center justify-between">
      <div class="text-lg font-semibold" id="stat-title">Select an item</div>
      <div class="text-sm text-slate-500" id="stat-price"></div>
    </div>
    <div class="mt-3 grid grid-cols-1 sm:grid-cols-2 gap-4 items-center">
      <canvas id="stat-chart" width="360" height="220"></canvas>
      <div class="text-sm" id="stat-details"></div>
    </div>
  </div>
</div>
<script src="/public/js/stats.js?v=<%= assetVersion %>"></script>
